source 'http://rubygems.org'

gem 'rails', '3.1.1'

# Bundle edge Rails instead:
# gem 'rails',     :git => 'git://github.com/rails/rails.git'

gem 'mysql2'
gem 'geocoder'
gem 'execjs'
gem 'therubyracer', :require => 'v8'
gem 'acts_as_votable'
gem 'acts_as_commentable'
gem 'haml'
gem 'russian'

gem 'unicorn'
# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end
gem 'will_paginate'
gem 'jquery-rails'
gem 'rails3-jquery-autocomplete'
gem 'paperclip'
gem 'devise'

group :development do
  gem 'capistrano'
  gem 'capistrano-ext'
  gem 'passenger'
end


group :development, :test do
  gem 'rspec-rails'
  gem 'cucumber-rails'
  gem 'rspec'
end

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'email_spec'
  gem 'timecop'
  gem 'launchy'
  gem 'webrat'
  gem 'rspec'
  gem 'spork'
end


