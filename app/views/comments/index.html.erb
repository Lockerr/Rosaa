<%= t('.comments') %>
<div class="comments">
  <% for comment in @comments %>
    <div class="comment">
      <%= simple_format comment.comment %>
    </div>
  <% end %>
</div>

<div class='new comments'>
  <%= form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label t('.comment') %><br/>
    <%= f.text_area :comment %>
  </p>
  <p> <%= f.submit %></p>
  <% end %>
</div>