.b-calculator
  = form_for 'calculator' do |f|
    .b-calculator__title
      Узнай, сколько
      %span.b-highlight ты заплатишь транспортного налога за год
    .b-topcol-leftcol
      .title
        Регион:
      - if @geo == ""
        = f.text_field 'redion_id', :class => 'region_combo', :placeholder => 'Введите ваш регион', :result => 0
      - else
        = f.text_field 'redion_id', :class => 'region_combo', :placeholder => 'Введите ваш регион', :result => 0, :value => @geo
        = image_tag ('icon/cross_blue.png'), :class => 'cross'
        - regions = Region.all.collect{|p| [ p.name, p.id ] }


    .b-topcol-centercol
      .title
        Мощность авто:
      = f.text_field "tax_id", :value => 250, :class => 'power'
    .b-topcol-rightcol
      .b-calculator-nalog
        %span.b-calculator-nalog__title
          Твой налог

        %span.inlineBlock.b-highlight.b-calculator-nalog__amount 18750
        %span.inlineBlock.b-calculator-nalog__rub рублей
  .clear
  %span.b-bigblockcorner-container
    %span.b-bigblockcorner-wrap
      %span.b-bigblockcorner


.region_collection
  - regions = Region.all.collect{|p| [ p.name, p.id ] }
  - for region in regions
    .region{:id => region[1], :name => region[0]}
      = region[0]